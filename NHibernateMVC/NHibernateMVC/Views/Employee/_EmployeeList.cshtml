@using Castle.Core.Internal
@model IList<NHibernateMVC.Models.Employee.EmployeeListItem>
<table id="#employeeSearchResultsTable" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>Employee Name</th>
            <th>Manager</th>
            <th>Address</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.ManagerId</td>
                <td>@item.Street @item.City @item.ZipCode @item.Country</td>
                <td>
                    <a class="btn btn-mini employeeSelect" href="@Url.Action("Edit", "Employee", new { employeeId = @item.EmployeeId })"><i class="icon-edit"></i>Select</a>
                    <a class="btn btn-mini" href="@Url.Action("Delete", "Employee", new { employeeId = @item.EmployeeId })"><i class="icon-remove"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
